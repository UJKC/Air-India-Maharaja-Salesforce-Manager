<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>FlightStatusCheck</fullName>
    <active>true</active>
    <description>Check if the related Flight status is &quot;Post Flight Check&quot; or not</description>
    <errorConditionFormula>$ObjectType.Flight__c.Fields.Status__c   =  &apos;Post Flight Check&apos;</errorConditionFormula>
    <errorDisplayField>IsAvailable__c</errorDisplayField>
    <errorMessage>Aircraft is on duty for a flight.</errorMessage>
</ValidationRule>
